{
    "private": true,
    "name": "moonlet",
    "version": "0.4.1",
    "license": "MIT",
    "scripts": {
        "start": "npm run dev:web",
        "build": "node scripts/update-extension-version.js && npm run build:ext -- --dest build/extension",
        "deploy": "npm run build && npx firebase deploy --token $FIREBASE_TOKEN",
        "publish:ext": "node scripts/publish-extension.js",
        "build:web": "preact build --config ./config/web.config.js --template src/web/index.html --no-prerender",
        "build:ext": "preact build --config ./config/extension.config.js --template src/extension/index.html --no-prerender",
        "dev:web": "preact watch --config ./config/web.config.js --template src/web/index.html ",
        "dev:ext": "preact watch --config ./config/extension.config.js --template src/extension/index.html --port 8181",
        "zip:ext": "node scripts/create-build-zip.js",
        "lint": "tslint --fix 'src/**/*.{ts,tsx}'",
        "prettier": "prettier --write \"**/*.{js,ts,tsx,scss,json}\" --ignore-path .gitignore",
        "test": "jest",
        "snyk": "snyk test"
    },
    "eslintConfig": {
        "extends": "eslint-config-synacor"
    },
    "eslintIgnore": ["build/*"],
    "devDependencies": {
        "@types/chrome": "0.0.77",
        "@types/crypto-js": "^3.1.43",
        "@types/jest": "^23.3.2",
        "babel-plugin-transform-builtin-extend": "^1.1.2",
        "chrome-webstore-upload": "^0.2.2",
        "eslint": "^5.12.1",
        "eslint-config-synacor": "^3.0.3",
        "firebase-tools": "^6.3.0",
        "husky": "^1.0.0-rc.13",
        "identity-obj-proxy": "^3.0.0",
        "if-env": "^1.0.0",
        "jest": "^23.6.0",
        "lint-staged": "^8.1.0",
        "node-sass": "^4.9.2",
        "preact-cli": "^2.0.0",
        "preact-cli-plugin-typescript": "^0.2.2",
        "prettier": "1.16.1",
        "sass-loader": "^7.1.0",
        "snyk": "^1.122.3",
        "ts-jest": "^23.1.4",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "tslint-microsoft-contrib": "^6.0.0",
        "typescript": "^3.2.1",
        "web-ext-types": "^3.1.0",
        "webpack-bundle-analyzer": "^3.0.3",
        "write-file-webpack-plugin": "^4.3.2",
        "zip-folder": "^1.0.0"
    },
    "dependencies": {
        "bignumber.js": "8.0.2",
        "bind-decorator": "^1.0.11",
        "crypto-js": "3.1.9-1",
        "history": "4.7.2",
        "moonlet-core": "git+https://github.com/cryptolandtech/moonlet-core.git",
        "preact": "8.4.2",
        "preact-async-route": "2.2.1",
        "preact-compat": "3.18.4",
        "preact-material-components": "1.5.5",
        "preact-redux": "2.0.2",
        "preact-render-spy": "^1.3.0",
        "preact-router": "2.6.1",
        "qrcode.react": "0.9.2",
        "react-copy-to-clipboard": "^5.0.1",
        "react-textarea-autosize": "7.1.0",
        "redux": "4.0.1",
        "redux-thunk": "2.3.0",
        "webextension-polyfill-ts": "0.8.9"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,scss,json,js}": ["npm run prettier", "git add"],
        "*.{ts,tsx}": ["npm run lint", "git add"]
    }
}
