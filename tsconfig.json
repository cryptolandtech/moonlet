{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "lib": ["es5", "es2017", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": true,
        "jsx": "react",
        "jsxFactory": "h",
        "allowJs": true,
        "keyofStringsOnly": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["node_modules/@types"],
        "types": ["chrome", "jest"],
        "resolveJsonModule": true
    }
}
